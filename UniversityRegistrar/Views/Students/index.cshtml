@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h1>Students</h1>

@if (Model.Count == 0)
{
  <p>No students have been added yet.</p>
}

<ul>
@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }) | Enrolled @student.DateOfEnrollment.ToShortDateString()</li>
}
</ul>

<p>@Html.ActionLink("Add student", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>