@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h1>Courses</h1>

@if (Model.Count == 0)
{
  <p>No courses have been added yet.</p>
}

<ul>
@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.CourseNumber}: {course.Name}", "Details", new { id = course.CourseId })</li>
}
</ul>

<p>@Html.ActionLink("Add course", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>